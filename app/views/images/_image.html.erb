<div id="<%= dom_id image %>">
  <div>
    <strong>Name:</strong>
    <%= image.name %>
  </div>

  <div class="mt-3">
    <div><strong>Picture:</strong></div>
    <%= image_tag(image.picture.url, width: "300", class: "mt-1") if image.picture? %>
  </div>

  <div class="mt-3">
    <strong>User:</strong>
    <%= image.user_id %>
  </div>

</div>
